<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardtable"
    tools:context="com.musicarray.codeclan.blackjack.GamePokerActivity">

    <TextView
        android:id="@+id/player_poker_name"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_winner" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/computer_card_4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/playingcardback" />

    <ImageView
        android:id="@+id/computer_card_4"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toEndOf="@+id/computer_card_3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/playingcardback" />

    <ImageView
        android:id="@+id/computer_card_3"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toEndOf="@+id/computer_card_2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/playingcardback" />

    <ImageView
        android:id="@+id/computer_card_2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toEndOf="@+id/computer_card_1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/playingcardback" />

    <ImageView
        android:id="@+id/computer_card_1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/playingcardback" />

    <TextView
        android:id="@+id/computer_poker_name"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/computer_name"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/computer_card_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/check_winner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/pokerchipbutton"
        android:onClick="onCheckWinnerButtonClicked"
        android:text="@string/check_winner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/computer_card_3" />

    <ImageView
        android:id="@+id/player_card_2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_card_1"
        app:layout_constraintTop_toBottomOf="@+id/player_poker_name" />

    <ImageView
        android:id="@+id/player_card_3"
        android:layout_width="59dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_card_2"
        app:layout_constraintTop_toBottomOf="@+id/player_poker_name" />

    <ImageView
        android:id="@+id/player_card_4"
        android:layout_width="63dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/player_card_5"
        app:layout_constraintStart_toEndOf="@+id/player_card_3"
        app:layout_constraintTop_toBottomOf="@+id/player_poker_name" />

    <ImageView
        android:id="@+id/player_card_1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_poker_name" />

    <ImageView
        android:id="@+id/player_card_5"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_poker_name" />
</android.support.constraint.ConstraintLayout>
