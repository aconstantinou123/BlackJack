<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cardtable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musicarray.codeclan.blackjack.ResultPokerActivity">

    <TextView
        android:id="@+id/player_poker_name_result"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="291dp" />

    <ImageView
        android:id="@+id/computer_card_5"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/computer_card_4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/computer_card_4"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toEndOf="@+id/computer_card_3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/computer_card_3"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toEndOf="@+id/computer_card_2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/computer_card_2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toEndOf="@+id/computer_card_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/computer_card_1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/computer_poker_name"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/computer_name"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/computer_card_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player_card_3_result"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_poker_name_result" />

    <ImageView
        android:id="@+id/player_card_2_result"
        android:layout_width="59dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_card_3_result"
        app:layout_constraintTop_toBottomOf="@+id/player_poker_name_result"
        app:layout_constraintVertical_bias="0.318" />

    <ImageView
        android:id="@+id/player_card_4_result"
        android:layout_width="63dp"
        android:layout_height="90dp"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_poker_name_result"
        tools:layout_editor_absoluteX="232dp" />

    <ImageView
        android:id="@+id/player_card_1_result"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/player_card_4_result"
        app:layout_constraintStart_toEndOf="@+id/player_card_2_result"
        app:layout_constraintTop_toBottomOf="@+id/player_poker_name_result" />

    <ImageView
        android:id="@+id/player_card_5_result"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_card_4_result"
        app:layout_constraintTop_toBottomOf="@+id/player_poker_name_result" />

    <TextView
        android:id="@+id/poker_result_screen"
        android:layout_width="340dp"
        android:layout_height="66dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/player_poker_name_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/computer_card_3" />
</android.support.constraint.ConstraintLayout>


